<Application x:Class="AlMohasebAlAraby.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Amber" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                
                <!-- Arabic Fonts -->
                <ResourceDictionary>
                    <FontFamily x:Key="ArabicFont">pack://application:,,,/Fonts/Cairo-Regular.ttf#Cairo</FontFamily>
                    <FontFamily x:Key="ArabicFontBold">pack://application:,,,/Fonts/Cairo-Bold.ttf#Cairo</FontFamily>
                    <FontFamily x:Key="ArabicFontSemiBold">pack://application:,,,/Fonts/Cairo-SemiBold.ttf#Cairo</FontFamily>
                </ResourceDictionary>

                <!-- Application Styles -->
                <ResourceDictionary>
                    <!-- Default Window Style -->
                    <Style TargetType="Window">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="WindowStyle" Value="SingleBorderWindow" />
                        <Setter Property="ResizeMode" Value="CanResize" />
                        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
                    </Style>

                    <!-- Default UserControl Style -->
                    <Style TargetType="UserControl">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                    </Style>

                    <!-- Default Page Style -->
                    <Style TargetType="Page">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
                    </Style>

                    <!-- Arabic TextBlock Style -->
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                    </Style>

                    <!-- Arabic Label Style -->
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                    </Style>

                    <!-- Arabic TextBox Style -->
                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="Margin" Value="5" />
                    </Style>

                    <!-- Arabic ComboBox Style -->
                    <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="Margin" Value="5" />
                    </Style>

                    <!-- Arabic Button Style -->
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Padding" Value="16,8" />
                        <Setter Property="MinWidth" Value="100" />
                    </Style>

                    <!-- Arabic DataGrid Style -->
                    <Style TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FlowDirection" Value="RightToLeft" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="AutoGenerateColumns" Value="False" />
                        <Setter Property="CanUserAddRows" Value="False" />
                        <Setter Property="CanUserDeleteRows" Value="False" />
                        <Setter Property="IsReadOnly" Value="True" />
                        <Setter Property="SelectionMode" Value="Single" />
                        <Setter Property="GridLinesVisibility" Value="Horizontal" />
                        <Setter Property="HeadersVisibility" Value="Column" />
                    </Style>

                    <!-- Card Style -->
                    <Style x:Key="CardStyle" TargetType="materialDesign:Card">
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="Padding" Value="15" />
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
                    </Style>

                    <!-- Title Style -->
                    <Style x:Key="TitleStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFontBold}" />
                        <Setter Property="FontSize" Value="20" />
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
                        <Setter Property="Margin" Value="0,0,0,15" />
                        <Setter Property="TextAlignment" Value="Center" />
                    </Style>

                    <!-- Subtitle Style -->
                    <Style x:Key="SubtitleStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFontSemiBold}" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                        <Setter Property="Margin" Value="0,0,0,10" />
                    </Style>

                    <!-- Currency Style -->
                    <Style x:Key="CurrencyStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFontBold}" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryHueMidBrush}" />
                        <Setter Property="TextAlignment" Value="Right" />
                    </Style>

                    <!-- Error Style -->
                    <Style x:Key="ErrorStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="Foreground" Value="Red" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Margin" Value="0,2,0,0" />
                    </Style>

                    <!-- Success Style -->
                    <Style x:Key="SuccessStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="Foreground" Value="Green" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Margin" Value="0,2,0,0" />
                    </Style>

                    <!-- Menu Item Style -->
                    <Style x:Key="MenuItemStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Padding" Value="20,15" />
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>

                    <!-- Dashboard Card Style -->
                    <Style x:Key="DashboardCardStyle" TargetType="materialDesign:Card">
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="Padding" Value="20" />
                        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
                        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
                        <Setter Property="Cursor" Value="Hand" />
                    </Style>

                    <!-- Status Bar Style -->
                    <Style x:Key="StatusBarStyle" TargetType="StatusBar">
                        <Setter Property="FontFamily" Value="{StaticResource ArabicFont}" />
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Height" Value="25" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
